# 	;;
# esac

initfs_base &&
	initfs_cpscripts
# initfs_kmods &&
# initfs_firmware &&
# initfs_custom_files &&
# initfs_cpio
rc=$?

# cleanup
if [ -z "$keeptmp" ]; then
	[ -d "$tmpdir" ] && rm -rf "$tmpdir"
fi

exit $rc
