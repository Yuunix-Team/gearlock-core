# find mount dir for given device in an fstab
# returns global MNTOPTS
find_mnt() {
	local dev="$1"
	case "$dev" in
	UUID=* | LABEL=*) dev=$(findfs "$dev") ;;
	# ZFS=*)
	# 	ROOTFSTYPE=zfs
	# 	modprobe -a zfs
	# 	prepare_zfs_root
	# 	dev=${ROOT#ZFS=}
	# 	;;
	esac
	echo "$dev"
}

