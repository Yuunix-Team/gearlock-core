# 	local gw_ip="$3"
# 	local netmask="$4"
# 	local device="$6"
# 	local autoconf="$7"
# 	local dns1="$8"
# 	local dns2="$9"

# 	case "$client_ip" in
# 	off | none) return ;;
# 	dhcp) autoconf="dhcp" ;;
# 	esac

# 	[ "$device" ] || device=$(ip_choose_if)

